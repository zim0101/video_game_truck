<odoo>
    <template id="pricing_page_template" name="Pricing Page">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row text-center">
                    <t t-if="request.params.get('error')">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <t t-esc="request.params.get('error')"/>
                        </div>
                    </t>
                    <t t-foreach="products" t-as="product">
                        <div class="col-lg-4 mb-4">
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <h4 class="my-0"><t t-esc="product.name"/></h4>
                                </div>
                                <div class="card-body">
                                    <h1 class="card-title pricing-card-title">$<t t-esc="product.list_price"/></h1>
                                    <ul class="list-unstyled mt-3 mb-4">
                                        <t t-foreach="product.attribute_line_ids" t-as="attribute">
                                            <li><t t-esc="attribute.attribute_id.name"/>:
                                                <t t-raw="', '.join([value.name for value in attribute.value_ids])"/>
                                            </li>
                                            <hr/>
                                        </t>
                                    </ul>
                                    <form t-attf-action="/buy_now/#{product.id}" method="post">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="form-group">
                                            <label class="mt-1" for="booking_date">Booking Date</label>
                                            <input type="date" id="booking_date" name="booking_date" class="form-control" required="required"/>
                                        </div>
                                        <div class="form-group">
                                            <label class="mt-1" for="booking_time">Booking Time</label>
                                            <input type="time" id="booking_time" name="booking_time" class="form-control" required="required"/>
                                        </div>
                                        <div class="form-group">
                                            <label class="mt-1" for="number_of_trucks">Number of Trucks</label>
                                            <select id="number_of_trucks" name="number_of_trucks" class="form-control" required="required">
                                                <t t-foreach="range(1, len(product.video_game_truck_ids) + 1)" t-as="index">
                                                    <option t-att-value="index"><t t-esc="index"/></option>
                                                </t>
                                            </select>
                                        </div>
                                        <button type="submit" class="btn btn-lg btn-block btn-primary mt-1">Order Now</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
