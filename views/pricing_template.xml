<odoo>
    <template id="pricing_page_template" name="Pricing Page">
        <t t-call="website.layout">
            <div class="container py-5">
                <div class="row text-center">
                    <t t-if="request.params.get('error')">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <t t-esc="request.params.get('error')"/>
                        </div>
                    </t>
                    <t t-foreach="products" t-as="product">
                        <div class="col-lg-4 mb-4">
                            <div class="card" style="height: 600px;">
                                <div class="card-header bg-primary text-white">
                                    <h4 class="my-0"><t t-esc="product.name"/></h4>
                                </div>
                                <div class="card-body">
                                    <h1 class="card-title pricing-card-title">$<t t-esc="product.list_price"/></h1>
                                    <ul class="list-unstyled mt-3 mb-4">
                                        <t t-foreach="product.attribute_line_ids" t-as="attribute">
                                            <hr/>
                                            <li><t t-esc="attribute.attribute_id.name"/>:
                                                <t t-raw="', '.join([value.name for value in attribute.value_ids])"/>
                                            </li>
                                        </t>
                                    </ul>
                                </div>
                                <form t-attf-action="/book_package/#{product.id}" method="post">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <button type="submit" class="btn btn-lg btn-block btn-primary mt-n2 mb-3">Book Now</button>
                                    </form>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
