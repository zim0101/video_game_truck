<odoo>
    <data>
        <!-- Form View -->
        <record id="view_slot_form" model="ir.ui.view">
            <field name="name">video_game_truck.slot.form</field>
            <field name="model">video_game_truck.slot</field>
            <field name="arch" type="xml">
                <form string="Time Slot">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_slot_tree" model="ir.ui.view">
            <field name="name">video_game_truck.slot.tree</field>
            <field name="model">video_game_truck.slot</field>
            <field name="arch" type="xml">
                <tree string="Time Slots">
                    <field name="name"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_slot" model="ir.actions.act_window">
            <field name="name">Time Slots</field>
            <field name="res_model">video_game_truck.slot</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new time slot.
                </p>
            </field>
        </record>
    </data>
</odoo>
